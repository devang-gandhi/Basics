<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="details content">
    <h2><%= blogs.title %></h2>
    <h4><%= blogs.snippet %></h4>
    <div class="content">
      <p><%= blogs.body %></p>
      <img src="../images/<%= blogs.image %>" alt="image">
    </div>
    <a class="delete" href="/blogs/delete/<%= blogs._id %>"><i class="fa-solid fa-trash-can"></i>Delete</a>
    <a class="update" href="/blogs/edit/<%= blogs._id %>"><i class="fa-solid fa-pen-to-square"></i>Edit</a>
  </div>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="https://kit.fontawesome.com/b05e24cbde.js" crossorigin="anonymous"></script>
  <%- include("./partials/foot.ejs") %>

</body>
</html>